@model EJournal.Models.Subject
@{
    ViewData["Title"] = "Данные о предмете";
}

<h1>@ViewData["Title"]</h1>

<h4>Предмет @Model.Name</h4>
<div>
    <a asp-action="Index" class="btn btn-primary our-link">Вернуться к списку</a> <a asp-action="Upsert" asp-route-id="@Model.Id" class="btn btn-primary our-link">Обновить даныне</a>
</div>
<hr />

<div class="row">
    <div class="col-md-4">

        <input asp-for="Id" hidden />

        <h4>Дисциплины</h4>
        <a asp-controller="Disciplines" asp-action="Upsert" class="btn btn-primary our-link">Добавить дисциплину</a>

    </div>
        @if (Model.Disciplines.Count() != 0)
        {
            <p></p>
            await Html.RenderPartialAsync("SubjectsDiscipline", Model.Disciplines);
        }
        else
        {
            <dt class="col-sm-2">
                Дисциплины отсутсвуют
            </dt>
        }



</div>

