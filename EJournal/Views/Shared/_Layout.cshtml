
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EJournal</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css?v=pAGv4ietcJNk_EwsQZ5BN9-K4MuNYS2a9wl4Jw-q9D0" />
    <link rel="stylesheet" href="/EJournal.styles.css?v=KB06YEXUssEQfMW8Lsi6Fzd7ueq83w1T7kkB1lTD69g" />
    <link rel="stylesheet" href="~/style.css" />
</head>
<body>
    <div class="page">
    <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
                <div class="container-fluid">
                    <button class="experement-btn"> <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" class="experement-btn">Журнал</a> </button>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if(User?.Identity?.IsAuthenticated ?? false)
                        {
                            <button class="experement-btn">
                            <li>
                                <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Logout">Выйти</a>
                            </li>
                            </button>
                            <button class="experement-btn">
                            <li>
                                <a class="nav-link text-white" asp-area="" asp-controller="Profile" asp-action="Index">Профиль</a>
                            </li>
                            </button>
                        }
                        else
                        {
                            <button class="experement-btn">
                            <li>
                            <li>
                                <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Index">Войти</a>
                            </li>
                                </button>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="main">
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
        </main>
        <footer class="footer">
            <div class="container">
                <a class="nav-link text-white">&copy;Журнал</a>
            </div>
        </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
