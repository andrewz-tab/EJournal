@model IEnumerable<EJournal.Models.Discipline>

@{
	ViewData["Title"] = "Список действующих дисциплин";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Upsert">Добавить дисциплину</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Account.PersonalData.FullName)
            </th>
            <th>
                Класс
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Subjects" asp-action="Details" asp-route-id="@item.SubjectKey">
                        @Html.DisplayFor(modelItem => item.Subject.Name)
                    </a>
                </td>
                <td>
                    <a asp-controller="Employees" asp-action="Details" asp-route-id="@item.EmployeeKey">
                        @Html.DisplayFor(modelItem => item.Employee.Account.PersonalData.FullName)
                    </a>
                </td>
                <td>
                    <a asp-controller="Classes" asp-action="Details" asp-route-id="@item.ClassKey">
                        @Html.DisplayFor(modelItem => item.Class.Number)
                        @Html.DisplayFor(modelItem => item.Class.Liter)
                    </a>
                </td>
                <td>
                    <a asp-action="Upsert" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
